<h1>Вход</h1>

<%= semantic_form_for resource, :as => resource_name, :url => session_path(resource_name) do | form | %>
  <%= form.inputs do %>
    <%= form.input :email, :input_html => { :autofocus => true } %>
    <%= form.input :password %>
    <%= form.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button :label => 'Войти', :button_html => { :class => 'button' } %>
    <%= render :partial => "shared/links" %>
  <% end %>
<% end %>

