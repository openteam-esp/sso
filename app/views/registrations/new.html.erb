<h1>Регистрация</h1>

<%= semantic_form_for resource, :as => resource_name, :url => registration_path(resource_name) do | form | %>
  <%= devise_error_messages! %>

  <%= form.inputs :class => 'inputs inline_fieldset' do %>
    <%= form.input :last_name, :input_html => { :autofocus => true } %>
    <%= form.input :first_name %>
    <%= form.input :middle_name %>
  <% end %>
  <%= form.inputs do %>
    <%= form.input :email %>
  <% end %>
  <%= form.inputs :class => 'inputs inline_fieldset' do %>
    <%= form.input :password %>
    <%= form.input :password_confirmation %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button :label => 'Зарегистрироваться', :button_html => { :class => 'button' } %>
    <%= render :partial => "shared/links" %>
  <% end %>
<% end %>
